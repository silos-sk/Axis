<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Axis.Views.EditRegime"
             Title="Edit Regime">
    <ScrollView>
    <VerticalStackLayout Padding="30,0"
            Spacing="25">
        <Label
            x:Name="lblPeriod"
            VerticalOptions="Center"
            HorizontalOptions="Center"
           Style="{StaticResource Headline}">

        </Label>

         <Label 
            x:Name="lblTime"
            FontSize="Large"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description="Edit time" 
           />

           <Label 
            x:Name="lblDose"
            FontSize="Subtitle"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description="Edit dose" 
           />

         <Button
                x:Name="btnBackHome"
                Text="Back Home" 
                SemanticProperties.Hint="Go Back Home"
                Clicked="btnBackHomeClicked"
                HorizontalOptions="Fill" />
       
    </VerticalStackLayout>
    </ScrollView>

</ContentPage>
