                        <HorizontalStackLayout Spacing="3"
                                               Margin="0,20,0,0">
                                <Label Text="Time"
                                       FontSize="Body"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"
                                       WidthRequest="80"></Label>

                                <TimePicker x:Name="EntryTime"
                                            FontSize="Body"
                                            WidthRequest="200"
                                            Time="{Binding SelectedTime}"/>

                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="5">
                                <Label Text="Dose"
                                       FontSize="Body"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"
                                       WidthRequest="80"></Label>
                                <Entry VerticalOptions="Center" x:Name="EntryDose"
                                       WidthRequest="200"  FontSize="Body"></Entry>
                        </HorizontalStackLayout>

                          <HorizontalStackLayout Spacing="3"
                                               Margin="0,20,0,0">
                                <Label Text="Test Time"
                                       FontSize="Body"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"
                                       WidthRequest="80"></Label>

                                <TimePicker x:Name="EntryTestTime"
                                            FontSize="Body"
                                            WidthRequest="200"
                                            Time="{Binding SelectedTestTime}"/>

                        </HorizontalStackLayout>


                     <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                             <Button
                                x:Name="btUpdate"
                                Text="Update" 
                                WidthRequest="180"
                                BackgroundColor="Green"
                                FontSize="Body"
                                SemanticProperties.Hint="Update"
                                Clicked="btnUpdateClicked"
                                HorizontalOptions="Fill" />
                            
                            <Button
                                x:Name="btnCancel"
                                Text="Cancel" 
                                FontSize="Body"
                                BackgroundColor="Grey"
                                SemanticProperties.Hint="Cancel"
                                Clicked="btnCancelClicked"
                                HorizontalOptions="Fill" />

                     </HorizontalStackLayout>  
                          
                </VerticalStackLayout>
        </ScrollView>

</ContentPage>
