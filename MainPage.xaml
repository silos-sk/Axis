<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Axis.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <HorizontalStackLayout HorizontalOptions="Center">
                <Image
                    Source="dotnet_bot.png"
                    HeightRequest="50"
                    WidthRequest="60"
                    Aspect="AspectFit"
                    SemanticProperties.Description="dot net bot in a hovercraft number nine"/>

                <Label
                    Text="AXIS"
                    FontSize="50"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1"
                        HorizontalOptions="Center"/>

            </HorizontalStackLayout>
            <!-- &#10; -->
            <Label
                Text="Test Timer App"
                FontSize="Subtitle"
                Margin="-20"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Endocrine Testing App"/>

            <Label
                Text="Pick a Protocol Below:"
                FontSize="Body"
                Margin="0,20,0,-10"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Pick a testing protocol"/>

            <HorizontalStackLayout Spacing="10"
                                   HorizontalOptions="Center">
                <Button
                    x:Name="ThreePt"
                    Text="3 point"
                    FontSize="Body"
                    SemanticProperties.Hint="Generates blood test timing for a 3 point Day Curve"
                    Clicked="OnProtocolClicked"
                    HorizontalOptions="Fill"
                    HeightRequest="50"
                    WidthRequest="125"/>

                <Button
                    x:Name="FourPt"
                    Text="4 point"
                    FontSize="Body"
                    SemanticProperties.Hint="Generates blood test timing for a 4 point Day Curve"
                    Clicked="OnProtocolClicked"
                    HorizontalOptions="Fill"
                    HeightRequest="50"
                    WidthRequest="125"/>

            </HorizontalStackLayout>

            <!-- <Label 
                Text="Patient Information"
                FontSize="Subtitle"/>

            <HorizontalStackLayout Spacing="3">
                <Label Text="Name"
                        VerticalOptions="Center" WidthRequest="80"></Label>
                <Entry VerticalOptions="Center" WidthRequest="200"></Entry>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="5">
                <Label Text="MRN"
                        VerticalOptions="Center" WidthRequest="80"></Label>
                <Entry VerticalOptions="Center" WidthRequest="200"></Entry>
            </HorizontalStackLayout>

             <HorizontalStackLayout Spacing="5">
            <Label Text="Medication"
                    VerticalOptions="Center" WidthRequest="80"></Label>
            <Entry VerticalOptions="Center" WidthRequest="200"></Entry>
             </HorizontalStackLayout> -->


            <Label Text="Steroid Regime"
                   FontSize="Subtitle"
                    Margin="0,0,0,-20"></Label>

            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0"
                        Grid.Column="0"
                        Text="TIME:"
                        FontSize="Body"></Label>
                <Label Grid.Row="0"
                        Grid.Column="1"
                        Text="DOSE:"
                        FontSize="Body"></Label>
                <Label Grid.Row="0"
                        Grid.Column="2"
                        Text="TEST TIME:"
                        FontSize="Body"></Label>

            </Grid>

            <ListView
                x:Name="listRegimes"
                RowHeight="50"
                ItemSelected="ListRegimes_ItemSelected"
                ItemTapped="ListRegimes_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="1"
                                        Grid.Column="0"
                                        Text="{Binding Time}"
                                        FontSize="Body"></Label>
                                <Label Grid.Row="1"
                                        Grid.Column="1"
                                        Text="{Binding Dose}"
                                        FontSize="Body"></Label>
                                <Label Grid.Row="1"
                                        Grid.Column="2"
                                        Text="{Binding TestTime}"
                                        FontSize="Body"></Label>

                            </Grid>

                        </ViewCell>

                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
