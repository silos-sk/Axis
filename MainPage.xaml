<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Axis.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Image
                        Source="dotnet_bot.png"
                        HeightRequest="50"
                        WidthRequest="60"
                        Aspect="AspectFit"
                        SemanticProperties.Description="dot net bot in a hovercraft number nine"/>

                    <Label
                        Text="AXIS"
                        FontSize="50"
                        Style="{StaticResource Headline}"
                        SemanticProperties.HeadingLevel="Level1"
                            HorizontalOptions="Center"/>

                </HorizontalStackLayout>
            <!-- &#10; -->
            <Label
                Text="Test Timer App"
                FontSize="Subtitle"
                Margin="-20"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Endocrine Testing App"/>
           
                <Button
                    x:Name="Protocols"
                    Margin="0,20,0,-10"
                    Text="Protocols"
                    FontSize="Body"
                    SemanticProperties.Hint="Generates blood test timing for a 3 point Day Curve"
                    Clicked="OnProtocolClicked"
                    HorizontalOptions="Fill"
                    HeightRequest="50"
                    WidthRequest="150"></Button>

            <Label Text="Steroid Regime"
                   FontSize="Subtitle"
                    Margin="0,15,0,-20"></Label>

             <Label
                Text="Tap on the timings below to edit"
                FontSize="Body"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Pick a testing protocol"/>


            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0"
                        Grid.Column="0"
                        Text="TIME:"
                        FontSize="Body"></Label>
                <Label Grid.Row="0"
                        Grid.Column="1"
                        Text="DOSE:"
                        FontSize="Body"></Label>
                <Label Grid.Row="0"
                        Grid.Column="2"
                        Text="TEST TIME:"
                        FontSize="Body"></Label>

            </Grid>

            <ListView
                x:Name="listRegimes"
                RowHeight="50"
                ItemSelected="ListRegimes_ItemSelected"
                ItemTapped="ListRegimes_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="1"
                                        Grid.Column="0"
                                        Text="{Binding Time}"
                                        FontSize="Body"></Label>
                                <Label Grid.Row="1"
                                        Grid.Column="1"
                                        Text="{Binding Dose}"
                                        FontSize="Body"></Label>
                                <Label Grid.Row="1"
                                        Grid.Column="2"
                                        Text="{Binding TestTime}"
                                        FontSize="Body"></Label>

                            </Grid>

                        </ViewCell>

                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
